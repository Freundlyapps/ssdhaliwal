      problem: 'Quick PDF-to-image conversion without registration.',
      solution: 'Simple, instant conversion tool.',
      impact: ['No registration', 'Instant processing', 'Free forever'],
      tech: ['JavaScript', 'PDF.js', 'Canvas API'],
      liveUrl: 'https://pdftoimage.picshifter.com',
      image: '/images/pdftoimage.png',
      tags: ['Free Tool', 'PDF', 'Utility'],
    },
    {
      title: 'IdeaVid.co',
      description: 'AI video repurposing tool-turn long content into short videos.',
      problem: 'Creating short videos from long-form content is time-consuming.',
      solution: 'Automated video repurposing from existing content.',
      impact: ['In development', 'Early access available', 'Coming soon'],
      tech: ['OpenAI', 'Video APIs', 'Automation'],
      image: '/images/ideavid.png',
