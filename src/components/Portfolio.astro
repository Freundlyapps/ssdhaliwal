---
interface Props {
  lang?: 'en' | 'de';
}

const { lang = 'en' } = Astro.props;

const portfolio = {
  en: [
    {
      title: 'PicShifter',
      description: 'Open-source image optimizer-privacy-first resizing & conversion.',
