const t = {
  en: {
    sectionTitle: 'Portfolio',
    sectionSubtitle: 'Projects I\'ve built',
    localBusinesses: 'Local Business Solutions',
    localBusinessesSubtitle: 'What I can build for your business',
    viewProject: 'View Project',
    liveDemo: 'Live Demo',
    sourceCode: 'Source Code',
    beta: 'Beta',
    inDevelopment: 'In Development',
    earlyAccess: 'Get Early Access',
    availableNow: 'Available Now',
  },
  de: {
    sectionTitle: 'Projekte',
    sectionSubtitle: 'Projekte, die ich gebaut habe',
    localBusinesses: 'Lösungen für lokale Unternehmen',
    localBusinessesSubtitle: 'Was ich für Ihr Unternehmen bauen kann',
    viewProject: 'Projekt ansehen',
    liveDemo: 'Live-Demo',
    sourceCode: 'Quellcode',
    beta: 'Beta',
    inDevelopment: 'In Entwicklung',
    earlyAccess: 'Frühen Zugang sichern',
    availableNow: 'Jetzt verfügbar',
  },
};

const projects = portfolio[lang];
const labels = t[lang];
const isGerman = lang === 'de';
---

<section id="portfolio" class="py-20 bg-white dark:bg-[#0a0a0a]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {labels.sectionTitle}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        {labels.sectionSubtitle}
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div class="group bg-gray-50 dark:bg-gray-800/50 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-transparent hover:border-primary/30 reveal" style={`transition-delay: ${index * 0.15}s;`}>
          <!-- Project Image -->
          <div class="relative h-48 bg-gradient-to-br from-primary/20 to-accent/20 overflow-hidden">
            {project.liveUrl ? (
              <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="block w-full h-full">
                {project.image ? (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <span class="text-6xl font-bold text-primary/30">{project.title.charAt(0)}</span>
                  </div>
                )}
              </a>
            ) : (
              <>
                {project.image ? (
                  <img
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <span class="text-6xl font-bold text-primary/30">{project.title.charAt(0)}</span>
                  </div>
                )}
              </>
            )}

            <!-- Badges -->
            <div class="absolute top-4 left-4 flex flex-wrap gap-2">
              {project.isBeta && (
                <span class="px-3 py-1 bg-accent text-white text-xs font-semibold rounded-full animate-pulse">
                  {labels.beta}
                </span>
              )}
              {project.isInDevelopment && (
                <span class="px-3 py-1 bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-xs font-semibold rounded-full">
                  {labels.inDevelopment}
                </span>
              )}
            </div>

            <!-- Tech Tags -->
            <div class="absolute top-4 right-4 flex flex-wrap gap-1 justify-end">
              {project.tags.slice(0, 2).map((tag) => (
                <span class="px-2 py-1 bg-white/90 dark:bg-gray-900/90 text-xs font-medium rounded-md">
                  {tag}
                </span>
              ))}
            </div>
          </div>

          <!-- Content -->
          <div class="p-6">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
              {project.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              {project.description}
            </p>

            <!-- Problem/Solution -->
            <div class="space-y-2 mb-4 text-sm">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-red-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="text-gray-600 dark:text-gray-400">{project.problem}</span>
              </div>
              <div class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600 dark:text-gray-400">{project.solution}</span>
              </div>
            </div>

            <!-- Impact -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.impact.map((item) => (
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 text-xs font-medium rounded-full">
                  {item}
                </span>
              ))}
            </div>

            <!-- Tech Stack -->
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tech.map((tech) => (
                <span class="px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-xs rounded-md">
                  {tech}
                </span>
              ))}
            </div>

            <!-- Links -->
            <div class="flex items-center space-x-4">
              {project.liveUrl && (
                <a
                  href={project.liveUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center px-4 py-2 bg-primary hover:bg-primary-dark text-white rounded-lg font-medium transition-colors text-sm"
                >
                  {labels.liveDemo}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
              {project.githubUrl && (
                <a
                  href={project.githubUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center px-4 py-2 bg-gray-900 dark:bg-gray-700 hover:bg-gray-800 dark:hover:bg-gray-600 text-white rounded-lg font-medium transition-colors text-sm"
                >
                  {labels.sourceCode}
                  <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
                  </svg>
                </a>
              )}
              {project.isInDevelopment && (
                <a
                  href="#contact"
                  class="flex items-center px-4 py-2 border-2 border-accent text-accent hover:bg-accent hover:text-white rounded-lg font-medium transition-colors text-sm"
                >
                  {labels.earlyAccess}
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- More Projects CTA -->
    <div class="mt-12 text-center">
      <a
        href="https://github.com/Freundlyapps?tab=repositories"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center text-primary dark:text-primary-light hover:underline font-medium"
      >
        View all on GitHub
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>

    <!-- Local Business Solutions Section -->
    <div class="mt-24 reveal">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          {labels.localBusinesses}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          {labels.localBusinessesSubtitle}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Restaurant Solution -->
        <div class="group bg-gradient-to-br from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 rounded-xl p-6 border border-orange-200 dark:border-orange-800 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center mb-4 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Restaurant Website</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">Digital menu, online ordering, table booking</p>
          <span class="text-xs font-semibold text-orange-600 dark:text-orange-400">From €450</span>
        </div>

        <!-- Barber Solution -->
        <div class="group bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6 border border-blue-200 dark:border-blue-800 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center mb-4 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Barber Booking</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">Appointment scheduling, client reminders</p>
          <span class="text-xs font-semibold text-blue-600 dark:text-blue-400">From €675</span>
        </div>

        <!-- Pet Services Solution -->
        <div class="group bg-gradient-to-br from-green-50 to-teal-50 dark:from-green-900/20 dark:to-teal-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center mb-4 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Pet Services</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">Service booking, pet profiles, payment</p>
          <span class="text-xs font-semibold text-green-600 dark:text-green-400">From €675</span>
        </div>

        <!-- Delivery Solution -->
        <div class="group bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6 border border-purple-200 dark:border-purple-800 hover:shadow-xl transition-all duration-300">
          <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center mb-4 text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Delivery System</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">Order tracking, driver app, analytics</p>
          <span class="text-xs font-semibold text-purple-600 dark:text-purple-400">From €900</span>
        </div>
      </div>

      <div class="mt-8 text-center">
        <a
          href={isGerman ? '/de#contact' : '#contact'}
          class="inline-flex items-center px-6 py-3 bg-primary hover:bg-blue-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transition-all"
        >
          {isGerman ? 'Lösung für Ihr Unternehmen?' : 'Get a solution for your business?'}
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
