    },
  ],
  de: [
    {
      title: 'PicShifter',
      description: 'Open-Source Bild-Optimierer—datenschutzsichere Größenänderung & Konvertierung.',
      problem: 'Content Creator verlieren Stunden beim manuellen Skalieren von Bildern.',
      solution: 'Browser-basiertes Tool für Bulk-Skalierung ohne Server-Upload.',
      impact: ['10.000+ Nutzer', 'Datenschutzkonform (DSGVO)'],
      tech: ['Bubble.js', 'Canvas API', 'GitHub Pages'],
      liveUrl: 'https://picshifter.com',
      githubUrl: 'https://github.com/Freundlyapps/picshifter',
      image: '/images/picshifter.png',
      tags: ['Open Source', 'Bildverarbeitung', 'Datenschutz'],
    },
    {
      title: 'Writola',
      description: 'KI-gestützte Schreib- und Publishing-SaaS für Content Creator.',
      problem: 'Die Erstellung von SEO-optimierten Inhalten dauert Stunden.',
      solution: 'KI-Assistent, der recherchiert, schreibt und formatiert.',
      impact: ['Reduziert Schreibzeit um 70%', 'Beta-Nutzer erstellen 3x mehr Content', 'Geschlossene Beta'],
      tech: ['Next.js', 'React', 'Fast API', 'Claude API', 'Gemini API'],
      liveUrl: 'https://writola.com',
      image: '/images/writola.png',
      tags: ['KI', 'SaaS', 'Content', 'Beta'],
      isBeta: true,
    },
    {
      title: 'PDFtoImage',
      description: 'Kostenloser Drag-&-Drop PDF-Konverter für schnelle Thumbnails.',
      problem: 'Schnelle PDF-zu-Bild-Konvertierung ohne Registrierung.',
      solution: 'Einfaches, sofortiges Konvertierungstool.',
      impact: ['Keine Registrierung', 'Sofortige Verarbeitung', 'Für immer kostenlos'],
      tech: ['JavaScript', 'PDF.js', 'Canvas API'],
      liveUrl: 'https://pdftoimage.picshifter.com',
      image: '/images/pdftoimage.png',
      tags: ['Kostenloses Tool', 'PDF', 'Utility'],
    },
    {
      title: 'IdeaVid.co',
      description: 'KI-Video-Repurposing-Tool—langen Content in Kurzvideos verwandeln.',
      problem: 'Die Erstellung von Kurzvideos aus Langform-Content ist zeitaufwendig.',
      solution: 'Automatisiertes Video-Repurposing aus vorhandenem Content.',
      impact: ['In Entwicklung', 'Früher Zugang verfügbar', 'Bald verfügbar'],
      tech: ['OpenAI', 'Video APIs', 'Automatisierung'],
      image: '/images/ideavid.png',
      tags: ['KI', 'Video', 'In Entwicklung'],
      isInDevelopment: true,
    },
  ],
